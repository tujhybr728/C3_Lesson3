<UserControl x:Class="MailSender.View.RecipientsInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:MailSender.View"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             DataContext="{Binding MainWindowModel, Source={StaticResource Locator}}"
             d:DesignHeight="380" d:DesignWidth="340">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding RefreshDataCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0,10,0,5">Получатели сообщений</TextBlock>
        <DockPanel DockPanel.Dock="Top" Margin="5,3">
            <TextBlock>Поиск по имени:</TextBlock>
            <TextBox/>
        </DockPanel>
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="0,3" Padding="15,3"
                Command="{Binding RefreshDataCommand}">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Height="16" Icon="Refresh" Margin="0,0,3,0" Foreground="DarkBlue">
                    <fa:ImageAwesome.Effect>
                        <DropShadowEffect ShadowDepth="1" BlurRadius="2"/>
                    </fa:ImageAwesome.Effect>
                </fa:ImageAwesome>
                <TextBlock>Обновить данные</TextBlock>
            </StackPanel>
        </Button>
        <DataGrid AutoGenerateColumns="False"
                  ItemsSource="{Binding Recipients}"
                  IsReadOnly="True" HeadersVisibility="Column" 
                  GridLinesVisibility="Vertical"
                  SelectedItem="{Binding SelectedRecipient}"
                  VerticalGridLinesBrush="DarkGray"
                  AlternatingRowBackground="LightCyan">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" MinWidth="40" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Имя" MinWidth="150" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="eMail" Width="*" Binding="{Binding Email}"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
